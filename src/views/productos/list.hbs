<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2"> Lista de productos</h3>

        {{#if productos}}

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4"> id  </th>
                        <th scope="col"> Producto   </th>
                        <th scope="col"> ingredientes      </th>
                        <th scope="col"> precio  </th>
                        <th scope="col"> Imagen  </th>
                        <th scope="col"> Acciones   </th>
                    </tr>
                </thead>
                <tbody>
                    
                    {{#each productos}}
                        <tr>
                            <td> {{id}} </td>
                            <td> {{producto}} </td>
                            <td> {{ingredientes}} </td>
                            <td> {{precio}} </td>
                            <td>
                                <img src="/uploads/{{imagen}}" class="card-img-top mx-auto m-2 rounded-circle" style="width: 150px; height: 150px;display:block;">
                            </td>
                            <td> 
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}

                </tbody>
            </table>

        {{else}}

            <div class="card text-center mx-auto">
                <div class="card-header">
                    <h3> Crear Producto </h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas ingresar un producto</p>
                    <a href="/add" class="btn btn-primary"> Ir a ingresar</a>
                </div>
            </div>

        {{/if}}

    </div>
</div>